@model bankAccounts.Models.User

<h1>Welcome, @Model.FirstName</h1>
<!-- <h1>Welcome, @ViewBag.username</h1> -->
<h3>Current Balance: $@Model.Balance</h3>

<hr>
<a href="/">Log out.!</a>

<h4>Deposit/Withdrawal
    <form action="/income" method="POST">
        <input type="number" name="monies">
        <input type="submit" value="Submit">
    </form>
</h4>

<table class="table table-striped">
    <tr>
        <th>Amount</th>
        <th>Date</th>       
    </tr>
     @foreach (var t in Model.UserTransactions)
    {
        <tr>
            <td>$@t.Amount</td>
            <td>@t.CreatedAt</td>
        </tr>        
    }
   
</table>